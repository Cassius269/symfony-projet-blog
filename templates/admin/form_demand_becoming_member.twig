{% extends 'base.html.twig' %}

{% block title %}Rejoignez-nous
{% endblock %}

{% block body %}
	<h1>Rejoignez-nous</h1>

	{{ form_start(form)}}
	{{ form_row(form.firstname)}}
		{{ form_row(form.lastname)}}
			{{ form_row(form.email)}}
	{{ form_row(form.message)}}
	{# {{ form_row(form.cvFile)}} #}
	{{ form_label(form.cvFile)}}
		<div id="divRowOfInputCvFile">
				<p>Glissez déposez ou parcourir</p>
				<img src="{{ asset('images/iconeFileUpload.svg') }}" alt="icone représentant un fichier"> <p>PDF</p>
				<p id="filename"></p>
				{{ form_widget(form.cvFile) }}
		</div>	
		<button>Envoyer</button>
	{{ form_end(form, {render_rest: false})}}

	{% endblock %} 
